{
  "$id": "cohort://schemas/action.attack.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AttackAction",
  "type": "object",
  "properties": {
    "type": { "const": "attack" },
    "unitId": { "type": "string", "minLength": 1 },
    "targetUnitId": { "type": "string", "minLength": 1 },
    "targetPosition": { "type": "string", "pattern": "^[A-Za-z]+[0-9]+$" },
    "modifier": { "type": "object", "additionalProperties": true },
    "reasoning": { "type": "string" }
  },
  "required": ["type", "unitId"],
  "anyOf": [
    { "required": ["targetUnitId"] },
    { "required": ["targetPosition"] }
  ],
  "additionalProperties": false
}
