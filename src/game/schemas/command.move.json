{
  "$id": "cohort://schemas/action.move.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MoveAction",
  "type": "object",
  "properties": {
    "type": { "const": "move" },
    "unitId": { "type": "string", "minLength": 1 },
    "currentPosition": { "type": "string", "minLength": 1 },
    "targetPosition": { "type": "string", "pattern": "^[A-Za-z]+[0-9]+$" },
    "modifier": { "type": "object", "additionalProperties": true },
    "reasoning": { "type": "string" },
    "validation": { "type": "object", "additionalProperties": true },
    "finalPosition": { "type": "string" },
    "isMissionContinuation": { "type": "boolean" },
    "newMission": { "type": "object", "additionalProperties": true },
    "missionAction": { "type": "boolean" }
  },
  "required": ["type", "unitId", "targetPosition"],
  "additionalProperties": false
}
