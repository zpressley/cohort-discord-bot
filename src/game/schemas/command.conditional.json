{
  "$id": "cohort://schemas/action.conditional.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ConditionalAction",
  "type": "object",
  "properties": {
    "type": { "const": "conditional" },
    "condition": {
      "type": "object",
      "properties": {
        "check": { "type": "string", "minLength": 1 },
        "position": { "type": "string" },
        "unitId": { "type": "string" }
      },
      "required": ["check"],
      "additionalProperties": true
    },
    "ifTrue": {
      "type": "array",
      "items": { "$ref": "cohort://schemas/action.any.json" },
      "minItems": 1
    },
    "ifFalse": {
      "type": "array",
      "items": { "$ref": "cohort://schemas/action.any.json" }
    }
  },
  "required": ["type", "condition", "ifTrue"],
  "additionalProperties": false
}
