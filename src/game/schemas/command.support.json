{
  "$id": "cohort://schemas/action.support.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SupportAction",
  "type": "object",
  "properties": {
    "type": { "const": "support_fire" },
    "unitId": { "type": "string", "minLength": 1 },
    "supporting": { "type": "string", "minLength": 1 },
    "targetUnitId": { "type": "string", "minLength": 1 },
    "reasoning": { "type": "string" }
  },
  "required": ["type", "unitId"],
  "anyOf": [
    { "required": ["supporting"] },
    { "required": ["targetUnitId"] }
  ],
  "additionalProperties": false
}
